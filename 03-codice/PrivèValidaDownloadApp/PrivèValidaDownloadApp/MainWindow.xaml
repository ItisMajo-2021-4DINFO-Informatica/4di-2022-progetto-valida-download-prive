                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background2}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border2}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground2}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="/back.png"/>
    </Window.Background>

    <Grid>
        <Label x:Name="LblTitolo" Content="Safety" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="36" FontFamily="Cooper Black"/>
        <Button Style="{DynamicResource RoundButtonStyle}" x:Name="BtnAvanti" Content="Avanti" HorizontalAlignment="Left" Margin="1013,569,0,0" VerticalAlignment="Top" Background="#FF00A2E8" Foreground="White" BorderBrush="#FF00A2E8" FontFamily="Cooper Black" FontSize="30" BorderThickness="2,2,2,2" Padding="10,10,10,10" Click="BtnAvanti_Click"/>
        <Button Style="{DynamicResource RoundButtonStyle1}" x:Name="BtnIndietro" Content="Indietro" HorizontalAlignment="Left" Margin="22,569,0,0" VerticalAlignment="Top" Background="White" Foreground="#FF00A2E8" BorderBrush="#FF00A2E8" FontFamily="Cooper Black" FontSize="30" BorderThickness="2,2,2,2" Padding="10,10,10,10" IsEnabled="False" Click="BtnIndietro_Click"/>
        <ProgressBar x:Name="pbProgress" Minimum="0" Maximum="100" Value="0" HorizontalAlignment="Center" Height="15" Margin="0,591,0,0" VerticalAlignment="Top" Width="768" BorderThickness="2,2,2,2" BorderBrush="#FF00A8F3" Background="White"/>
        <TextBlock x:Name="TbRisultato" HorizontalAlignment="Left" Margin="940,135,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontFamily="Cooper Black" FontSize="55" Width="230" Height="306"/>
        <TextBlock TextWrapping="Wrap" x:Name="LblImporta"  HorizontalAlignment="Left" Margin="42,186,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Cooper Black" FontSize="36" Width="817" Text="Seleziona il tuo file (.iso)" TextAlignment="Center" Height="90" />
        <Button Style="{DynamicResource RoundButtonStyle2}" x:Name="BtnImporta" Content="Seleziona" HorizontalAlignment="Left" Margin="352,281,0,0" VerticalAlignment="Top" Background="White" BorderBrush="White" Foreground="#FF00A8F3" FontFamily="Cooper Black" FontSize="36" BorderThickness="2,2,2,2" Padding="10,10,10,10" Click="BtnImporta_Click"/>
        <Label x:Name="lblFile" Content="Nessun file selezionato" HorizontalAlignment="Left" Margin="23,347,0,0" VerticalAlignment="Top" FontFamily="Cooper Black" Background="{x:Null}" Foreground="White" FontSize="16" FontStyle="Italic" HorizontalContentAlignment="Center" Width="854"/>
        <Label x:Name="lblIndice" Content="1/4" HorizontalAlignment="Left" Margin="804,17,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Cooper Black" FontSize="24" RenderTransformOrigin="1.591,1.216" Width="82" Background="#FF00A8F3" HorizontalContentAlignment="Center"/>
        <Label x:Name="lblFinger" Content="" HorizontalAlignment="Left" Margin="174,407,0,0" VerticalAlignment="Top" FontFamily="Cooper Black" Background="{x:Null}" Foreground="White" FontSize="24" FontStyle="Italic" Width="703"/>
        <TextBox x:Name="txtFinger"  HorizontalAlignment="Left" Margin="540,401,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" FontFamily="Cooper Black" FontSize="22" Foreground="White" BorderBrush="#FF00A8F3" Background="#FF00A8F3" BorderThickness="2,2,2,2" Padding="10,10,10,10" SelectionBrush="#FF00A8F3"/>

